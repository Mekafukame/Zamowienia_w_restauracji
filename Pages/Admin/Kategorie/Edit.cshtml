@page
@model Zamowienia_w_restauracji.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="content col-6 offset-3">
    <h1>Edytuj wiersz</h1>

    <h4>Kategorie</h4>
    <hr />
    <div>
        <div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Kategorie.ID" />
                <div class="form-group">
                    <label asp-for="Kategorie.Nazwa" class="control-label"></label>
                    <input asp-for="Kategorie.Nazwa" class="form-control" />
                    <span asp-validation-for="Kategorie.Nazwa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
