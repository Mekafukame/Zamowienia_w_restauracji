@page
@model Zamowienia_w_restauracji.Pages.Dania.IndexModel

@{
    ViewData["Title"] = "Zarządzanie Menu";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="content">

    <h1><span class="material-icons md-48">settings</span> Zarządzanie Menu</h1>

    <div class="row">
        <a asp-page="Create"><span class="material-icons-outlined md-60 center-height menu-add-icon">add</span></a>
    </div>
    <br />
    @{
        foreach (var category in Model.Kategorie)
        {
            <div class="Category">
                <h2>@Html.DisplayFor(Model => category)</h2>
                <hr />
            </div>
            foreach (var item in Model.Danie)
            {
                if (item.Rodzaj == category)
                {
                    <div class="row menu">
                        <div>
                            <img src="~/Grafiki/Menu/@Html.DisplayFor(modelItem => item.Zdjecie)" alt="Danie" />
                        </div>
                        <div class="col-8">
                            <div class="row col-12">
                                <div class="menu-name">
                                    @Html.DisplayFor(modelItem => item.Nazwa)
                                </div>
                            </div>
                            <div class="row col-12">
                                @Html.DisplayFor(modelItem => item.Sklad)
                            </div>
                        </div>

                        <div class="col-1">
                            <p class="center-height">@Html.DisplayFor(modelItem => item.Cena)zł</p>
                        </div>
                        <div>
                            <a asp-page="./Edit" asp-route-id="@item.ID"><span class="material-icons-outlined md-48 center-height menu-add-icon">edit</span></a>
                            <a asp-page="./Delete" asp-route-id="@item.ID"><span class="material-icons-outlined md-48 center-height menu-add-icon">clear</span></a>
                        </div>
                    </div>
                    <br />
                }
            }
        }
    }
    <div class="row">
        <a asp-page="/Admin/Zarzadzanie"><span class="material-icons-outlined md-48 center-height menu-add-icon">arrow_back</span></a>
    </div>


</div>